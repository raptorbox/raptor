{
    "soupdates": {
        "mappings": {
            "update": {

                "_ttl": {
                    "enabled": true,
                    "default": "3M"
                },

                "_all": {
                    "enabled": false
                },

                "dynamic": true,

                "_source": {
                    "includes": [
                        "meta.*"
                    ]
                },
                "dynamic_templates": [{
                    "lastUpdates_are_date": {
                        "path_match": "lastUpdate",
                        "mapping": {
                            "index": "not_analyzed",
                            "type": "date",
                            "ignore_malformed": true
                        }
                    }
                }, {
                    "locations_are_geojson": {
                        "path_match": "channels.location.current-value",
                        "mapping": {
                            "store": "no",
                            "index": "not_analyzed",
                            "type": "geo_point",
                            "ignore_malformed": true
                        }
                    }
                }, {
                    "current-value_are_strings": {
                        "path_match": "channels.*.current-value",
                        "match_mapping_type": "string",
                        "mapping": {
                            "store": "no",
                            "index": "not_analyzed",
                            "type": "string",
                            "ignore_malformed": true
                        }
                    }
                }, {
                    "current-value_are_double": {
                        "path_match": "channels.*.current-value",
                        "match_mapping_type": "double",
                        "mapping": {
                            "store": "no",
                            "index": "not_analyzed",
                            "type": "double",
                            "ignore_malformed": true
                        }
                    }
                }, {
                    "current-value_are_int": {
                        "path_match": "channels.*.current-value",
                        "match_mapping_type": "integer",
                        "mapping": {
                            "store": "no",
                            "index": "not_analyzed",
                            "type": "double",
                            "ignore_malformed": true
                        }
                    }
                }, {
                    "current-value_are_long": {
                        "path_match": "channels.*.current-value",
                        "match_mapping_type": "integer",
                        "mapping": {
                            "store": "no",
                            "index": "not_analyzed",
                            "type": "double",
                            "ignore_malformed": true
                        }
                    }
                }],
                "properties": {
                    "id": {
                        "type": "string",
                        "analyzer": "whitespace",
                        "index": "not_analyzed"
                    },
                    "userId": {
                        "type": "string",
                        "analyzer": "whitespace",
                        "index": "not_analyzed"
                    },
                    "streamId": {
                        "type": "string",
                        "analyzer": "whitespace",
                        "index": "not_analyzed"
                    }
                }
            }
        }
    },
    "subscriptions": {
        "mappings": {
            "subscription": {
                "_all": {
                    "enabled": false
                },
                "dynamic": true,
                "_source": {
                    "includes": [
                        "meta.*"
                    ]
                },
                "dynamic_templates": [{
                    "all_strings_to_avoid_collisions": {
                        "match": "*",
                        "mapping": {
                            "store": "no",
                            "index": "not_analyzed",
                            "include_in_all": false,
                            "type": "string",
                            "analyzer": "whitespace"
                        }
                    }
                }],
                "properties": {
                    "callback": {
                        "type": "string"
                    },
                    "source": {
                        "type": "string"
                    },
                    "destination": {
                        "type": "string"
                    },
                    "stream": {
                        "type": "string"
                    },
                    "customFields": {
                        "enabled": false
                    }
                }
            }
        }
    },
    "sodescriptions": {
        "mappings": {
            "serviceobject": {
                "_all": {
                    "enabled": false
                },
                "dynamic": false,
                "_source": {
                    "includes": [
                        "id", "userId", "createdAt"
                    ]
                },
                "properties": {
                    "id": {
                        "type": "string",
                        "analyzer": "whitespace",
                        "index": "not_analyzed"
                    },
                    "userId": {
                        "type": "string",
                        "analyzer": "whitespace",
                        "index": "not_analyzed"
                    },
                    "createdAt": {
                        "type": "date",
                        "index": "not_analyzed"
                    },
                    "public": {
                        "type": "boolean"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "customFields": {
                        "type": "object"
                    }
                }
            }
        }
    }
}
